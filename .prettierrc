{
  "plugins": ["prettier-plugin-solidity"],
  "tabWidth": 2,
  "useTabs": false,
  "singleQuote": true,
  "printWidth": 80,
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 80,
        "singleQuote": true,
        "tabWidth": 2
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "options": {
        "printWidth": 100,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "es5",
        "bracketSpacing": true
      }
    }
  ]
}